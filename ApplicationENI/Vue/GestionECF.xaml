<UserControl x:Class="ApplicationENI.Vue.GestionECF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="460" d:DesignWidth="630">
    <Grid Loaded="Grid_Loaded">
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="141,29,0,0" Name="cbECF" VerticalAlignment="Top" Width="206" Text="">
            <ComboBoxItem Content="ECF1" />
            <ComboBoxItem Content="ECF2" />
            <ComboBoxItem Content="ECF3" />
        </ComboBox>

            <TextBox Height="23" HorizontalAlignment="Left" Margin="141,63,0,0" Name="tbLibECF" VerticalAlignment="Top" Width="206" Text="libelle" />
        <TextBox Margin="50,347,0,0" Name="tbCommECF" Text="commentaire" Height="62" VerticalAlignment="Top" HorizontalAlignment="Left" Width="514" />
        <GroupBox Header="Type notation" Height="89" HorizontalAlignment="Left" Margin="403,25,0,0" Name="gbNotation" VerticalAlignment="Top" Width="167">
            <Grid>
                <RadioButton Content="numérique" Height="16" HorizontalAlignment="Left" Margin="10,10,0,0" Name="rbNumerique" VerticalAlignment="Top" Checked="radioButton1_Checked" IsChecked="True" />
                <RadioButton Content="acquisition" Height="16" HorizontalAlignment="Left" Margin="10,32,0,0" Name="rbAcquisition" VerticalAlignment="Top" />
            </Grid>
        </GroupBox>
        <Slider Height="23" HorizontalAlignment="Left" Margin="187,102,0,0" Name="slVersion" VerticalAlignment="Top" Width="160" Minimum="1" Maximum="10" IsSnapToTickEnabled="True" TickFrequency="1" TickPlacement="TopLeft" SmallChange="1" AutoToolTipPlacement="BottomRight" ValueChanged="slVersion_ValueChanged" />
        <Label Content="ECF :" Height="28" Margin="22,29,0,0" Name="lbECF" VerticalAlignment="Top" HorizontalAlignment="Left" Width="113" HorizontalContentAlignment="Right" />
        <Label Content="Libellé :" Height="28" HorizontalAlignment="Left" Margin="22,0,0,371" Name="lbLibECF" VerticalAlignment="Bottom" Width="113" HorizontalContentAlignment="Right" />
        <Label Content="Nb Version(s) :" Height="28" HorizontalAlignment="Left" Margin="22,97,0,0" Name="lbNbVersionECF" VerticalAlignment="Top" Width="113" HorizontalContentAlignment="Right" />
        <ListBox Height="195" HorizontalAlignment="Left" Margin="50,146,0,0" Name="listBox1" VerticalAlignment="Top" Width="514" ItemsSource="{Binding}" SelectionMode="Multiple" />
        <Label Content="1" Height="28" HorizontalAlignment="Left" Margin="141,97,0,0" Name="lbNbVersions" VerticalAlignment="Top" />
        <Button Content="Créer" Height="23" HorizontalAlignment="Left" Margin="219,425,0,0" Name="button1" VerticalAlignment="Top" Width="75" />
        <Button Content="Modifier" Height="23" HorizontalAlignment="Left" Margin="306,425,0,0" Name="button2" VerticalAlignment="Top" Width="75" />
        <Button Content="Supprimer" Height="23" HorizontalAlignment="Left" Margin="392,425,0,0" Name="button3" VerticalAlignment="Top" Width="75" />
        <Button Content="Annuler" Height="23" HorizontalAlignment="Left" Margin="479,425,0,0" Name="button4" VerticalAlignment="Top" Width="75" />
    </Grid>
</UserControl>
